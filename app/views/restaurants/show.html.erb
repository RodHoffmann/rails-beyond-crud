<p style="color: green"><%= notice %></p>

<%= render @restaurant %>

<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>

<h2>Reviews:</h2>

<ul>
  <% @reviews.each do |review|  %>
    <li>
      <%= review.content %>
       <%= link_to "Delete", review_path(review), data: {turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this review?"}  %>
    </li>
  <% end %>
</ul>
